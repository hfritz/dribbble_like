<fieldset>
  <legend>Upload a picture</legend>
  <%= form_for @user, :html => {:multipart => true} do |f| %>
    <div class="control-group">
      <%= f.label :pic, :class => 'control-label' %>
      <div class="controls">
        <%= f.file_field :pic, :class => 'text_field' %>
      </div>
    </div>
    
    <div class="form-actions">
      <%= f.submit "Upload Pic", :class => 'btn btn-primary' %>
    </div> 
  <% end %>

</fieldset>